	// -webkit-animation: horiz 1.5s linear infinite 13s, vert 1.5s steps(1) forwards 13s;
					animation: horiz 1.5s linear infinite 28s, vert 1.5s steps(1) forwards 28s;
}

@-webkit-keyframes horiz {
	from {
		-webkit-transform: translatex(0%);
						transform: translatex(0%);
	}
	to {
		-webkit-transform: translatex(100%);
						transform: translatex(100%);
	}
}

@keyframes horiz {
	from {
		-webkit-transform: translatex(0%);
						transform: translatex(0%);
	}
	to {
		-webkit-transform: translatex(100%);
						transform: translatex(100%);
	}
}
@-webkit-keyframes vert {
	from {
		top: 0;
	}
	to {
		top: 100%;
	}
}
@keyframes vert {
	from {
		top: 0;
	}
	to {
		top: 100%;
	}
}
@-webkit-keyframes move {
	from {
		-webkit-transform: translatey(0);
						transform: translatey(0);
	}
	to {
		-webkit-transform: translatey(-30%);
						transform: translatey(-30%);
	}
}
@keyframes move {
	from {
		-webkit-transform: translatey(0);
						transform: translatey(0);
	}
	to {
		-webkit-transform: translatey(-30%);
						transform: translatey(-30%);
	}
}
.replay {
	margin: 20px auto;
	position: fixed;
	top: 0;
	color: rgba(255, 255, 255, 0.5);
	background: black;
	border: 1px solid rgba(255, 255, 255, 0.5);
	width: 70px;
	height: 30px;
	padding-top: 2px;
	line-height: 1;
	border-radius: 10px;
	transition: all ease 0.2s;
	cursor: pointer;
	text-align: center;
	font-family: 'Saira', sans-serif;
	outline: none;
}
.replay:hover {
	color: white;
	border-color: white;
	-webkit-transform: scale(1.05);
					transform: scale(1.05);
}


