.wrapper {
	padding-top: 160px;
	line-height: 1.3;
	overflow: hidden;
	color: rgb(204, 203, 204)
}
.wrapper.animation {
	// -webkit-animation: linear 20s forwards move;
					animation: linear 20s forwards move 15s;
}
.wrapper p {
	position: relative;
	font-weight: bold;
}
.wrapper p:nth-child(1).animation::before {
	content: '';
	position: absolute;
	-webkit-transform: translatey(20%);
					transform: translatey(20%);
	left: 0;
	right: 0;
	height: 100%;
	background: black;
	// -webkit-animation: vert 7.5s steps(5) forwards 0s;
					animation: vert 7.5s steps(5) forwards 15s;
}
.wrapper p:nth-child(1).animation::after {
	content: '';
	position: absolute;
	left: -40%;
	top: 0;
	bottom: 0;
	background: linear-gradient(to right, transparent 0, #000 10%);
	width: 140%;
	-webkit-transform: translatex(0);
					transform: translatex(0);
	// -webkit-animation: horiz 1.5s linear infinite 0s, vert 7.5s steps(5) forwards 0s;
					animation: horiz 1.5s linear infinite 15s, vert 7.5s steps(5) forwards 15s;
}
.wrapper p:nth-child(2).animation::before {
	content: '';
	position: absolute;
	-webkit-transform: translatey(100%);
					transform: translatey(100%);
	left: 0;
	right: 0;
	height: 100%;
	background: black;
	// -webkit-animation: vert 1.5s steps(1) forwards 10s;
					animation: vert 1.5s steps(1) forwards 25s;
}
.wrapper p:nth-child(2).animation::after {
	content: '';
	position: absolute;
	left: -40%;
	top: 0;
	bottom: 0;
	background: linear-gradient(to right, transparent 0, #000 10%);
	width: 140%;
	-webkit-transform: translatex(0);
					transform: translatex(0);
	// -webkit-animation: horiz 1.5s linear infinite 10s, vert 1.5s steps(1) forwards 10s;
					animation: horiz 1.5s linear infinite 25s, vert 1.5s steps(1) forwards 25s;
}
.wrapper p:nth-child(3).animation::before {
	content: '';
	position: absolute;
	-webkit-transform: translatey(100%);
					transform: translatey(100%);
	left: 0;
	right: 0;
	height: 100%;
	background: black;
	// -webkit-animation: vert 1.5s steps(1) forwards 13s;
					animation: vert 1.5s steps(1) forwards 28s;
}
.wrapper p:nth-child(3).animation::after {
